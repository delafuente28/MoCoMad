@model ICollection<ChartData>
@{
    ViewData["Title"] = "Air Quality Prediction";
    var XLabels = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.Hour).ToList());
    var YValues = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.Measure).ToList());
    var YValues2 = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.Measure2).ToList());
    var Day = DateTime.Today.Day + 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h1>Air Quality Prediction</h1>
    <div class="box-body">
        <h3>Día @(DateTime.Today.Day + 1) de Octubre de 2017</h3>
        <div class="chart-container">
            <canvas id="chart" style="width:30%; height:500px"></canvas>
        </div>
    </div>
</body>
</html>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<script type="text/javascript">

        $(function () {
    var chartName = "chart";
        var ctx = document.getElementById(chartName).getContext('2d');
        var data = {
                labels: @Html.Raw(XLabels),
                datasets: [{
                    label: '2017',
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
